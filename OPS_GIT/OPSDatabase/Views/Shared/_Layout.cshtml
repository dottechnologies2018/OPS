                <div class="hamburger-toggle"><span class="bar-top"></span><span class="bar-mid"></span><span class="bar-bot"></span></div>
            </div>
            <a class="navbar-brand" href="#index.html">OPS DATABASE</a>
            <div class="navbar-toggler c-header-icon-2 row" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <div class="hamburger-toggle-2"><span class="bar-top"></span><span class="bar-mid"></span><span class="bar-bot"></span></div>
            </div>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    @*<li class="nav-item">
                            <a class="nav-link" href="#">
                                <div class="c-header-icon"><span class="c-badge c-badge--header-icon animated shake">87</span><i class="fas fa-bell"></i></div>
                            </a>
                        </li>*@
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </header>
    <!--=======================
           HEADER CLOSE
    ========================-->
    <!--=======================
           SIDEBAR START
    ========================-->
    <div class="flex-parent shadow">
        <div class="l-sidebar__content">
            <nav class="c-menu js-menu">
                <ul class="u-list shadow">
                    <li class="c-menu__item" data-toggle="tooltip" title="Dashboard">
                        <div class="c-menu__item__inner">
                            <i class="fas fa-tachometer-alt"></i>
                            <div class="c-menu-item__title"><span>Dashboard</span></div>
                        </div>
                    </li>
                    <li class="c-menu__item" data-toggle="tooltip" title="Manage Downtime">
                        <div class="c-menu__item__inner">
                            <i class="fas fa-cogs"></i>
                            <div class="c-menu-item__title"><a href="@Url.Action("ManageDowntime","Home")"><span>Manage Downtime</span></a></div>
                        </div>
                    </li>
                    <li class="c-menu__item has-submenu" data-toggle="tooltip" title="Manage Assets">
                        <div class="c-menu__item__inner">
                            <i class="fas fa-truck"></i>
                            <div class="c-menu-item__title"><a href="@Url.Action("ManageAssets","Home")"><span>Manage Assets</span></a></div>                          
                        </div>
                    
                    </li>
                  
                    <li class="c-menu__item has-submenu" data-toggle="tooltip" title="Manage Data Entry">
                        <div class="c-menu__item__inner">
                            <i class="fas fa-users"></i>
                            <div class="c-menu-item__title"><a href="@Url.Action("ManageDataEntry","Home")"><span>Manage Data Entry</span></a></div>
                        </div>
                    </li>
                    <li class="c-menu__item has-submenu" data-toggle="tooltip" title="Reporting">
                        <div class="c-menu__item__inner">
                            <i class="fas fa-file"></i>
                            <div class="c-menu-item__title"><a href="@Url.Action("ManageReporting","Home")"><span>Reporting</span></a></div>
                            
