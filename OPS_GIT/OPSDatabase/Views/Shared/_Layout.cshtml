                </ul>
            </nav>
        </div>
    </div>
    <!--=======================
           SIDEBAR CLOSE
    ========================-->
    <!--=======================
           MAIN PANNEL START
    ========================-->
    <main class="l-main">
        @RenderBody()
    </main>
    <!--=======================
           MAIN PANNEL CLOSE
    ========================-->
    <!--=======================
           FOOTER START
    ========================-->
    <footer class="footer text-center shadow">
        <p> &copy; 2018 OPS DATABASE - All right Reserved</p>
    </footer>
    <!--=======================
           FOOTER CLOSE
    ========================-->
    <!-- Add New Manage Downtime Modal -->
    <div class="modal fade" tabindex="-1" role="dialog" id="AddNewDownTimeModal">
        <div class="modal-dialog">
            <div class="modal-content ds-cus-modal signup modelIframe">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h1 id="AddNewDownTimeModalHeading">Add New Downtime</h1>
                <br>
                <iframe id="iframeAddNewDownTimeModal" src="" height="100%" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <!-- Add New Asset Modal -->
    <div class="modal fade" tabindex="-1" role="dialog" id="AddNewAssetModal">
        <div class="modal-dialog">
            <div class="modal-content ds-cus-modal signup">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h1 id="AddNewAssetModalHeading">Add New Assets</h1>
                <br>
                <form id="frmAddNewAsset" name="frmAddNewAsset">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Assets</label>
                            <input type="text" class="form-control" name="AssetType" id="AssetType" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <div class="col-xs-12">
                            <button type="button" id="btnSubmit" data-request-url="@Url.Action("AddNewManageAsset","Home")" class="btn btn-block btn-success">Submit</button>
                            <button type="button" id="btnUpdate" data-request-url="@Url.Action("AddNewManageAsset","Home")" class="btn btn-block btn-success d-none">Update</button>
                        </div>
                    </div>
                    <input type="hidden" name="Assets_Id" id="Assets_Id" />
                </form>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ops")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>

<script>
    $(function () {
        setNavigation();

        $(".commondatepicker").datepicker({
            autoclose: true,
            orientation: "bottom"
            , format: 'dd/mm/yyyy'
        });

        $('.commondatepicker').datepicker('setDate', 'now');

        $("#From").datepicker({
            autoclose: true,
            orientation: "bottom"
            ,format: 'dd/mm/yyyy'
        }).on('changeDate', function (selected) {
            var minDate = new Date(selected.date.valueOf());
            $('#To').datepicker('setStartDate', minDate);
        });

        $("#To").datepicker({
            autoclose: true,
            orientation: "bottom"
            ,format: 'dd/mm/yyyy'
        }).on('changeDate', function (selected) {
            var maxDate = new Date(selected.date.valueOf());
            $('#From').datepicker('setEndDate', maxDate);
        });
    });

    function setNavigation() {
        var path = window.location.pathname;
        path = path.replace(/\/$/, "");
        path = decodeURIComponent(path);

        $(".c-menu-item__title a").each(function () {
            var href = $(this).attr('href');
            if (path === href) {
                $(this).closest('li').addClass('is-active');
            }
        })
    }


</script>


