
@{
    ViewBag.Title = "Manage Assets";
}


<div class="content-wrapper content-wrapper--with-bg">
    <div class="page-content">
        <div class="one">
            <div class="row mb-4">
                <div class="col-lg-12">
                    <div class="alert shadow text-uppercase hidden-xs-down gap-25" role="alert">
                        <span class="right-15">Manage Assets</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card" data-border-color="cyan">
                        <div class="card-header" data-background-color="cyan">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input placeholder="Search..." type="text" class="col-sm-12" id="search" name="search" onkeyup="tableSearch()" />
                                </div>
                                <div class="col-lg-6">
                                    <a class="btn btn-light" onclick="OpenAddNewAssetModal()">Add New</a>
                                </div>                               
                            </div>
                        </div>
                        <div class="card-content ds-responsive-tables">
                            <table class="table table-hover table-striped" id="customTable">
                                <thead class="">
                                    <tr>
                                        <th>Asset Type</th>                                        
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="ManageAssets" data-get-url="@Url.Action("GetAssets","Home")" data-delete-url="@Url.Action("DeleteManageAssets","Home")" >
                              
                                </tbody>
                            </table>                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/manageassets")   
}




